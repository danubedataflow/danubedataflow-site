[%- DEFAULT file = 'sketch.js' -%]
<!DOCTYPE html>
<html lang="[% lang %]">

[% WRAPPER head %]
    <link href="/deps/highlight.min.css" rel="stylesheet">
    <script src="/deps/highlight.min.js"></script>
[% END %]

[% WRAPPER body %]
    <section class="narrow">
        <p>
[% IF lang == 'en' %]
            Back to the <a href="index.html">Sketch</a>
[% ELSIF lang == 'de' %]
            Zurück zur <a href="index.html">Skizze</a>
[% ELSIF lang == 'ja' %]
            <a href="index.html">スケッチ</a>に戻る
[% END %]
        </p>
        <pre><code class="language-javascript" id="source">
        </code></pre>
    </section>
[% END %]

<script>

window.addEventListener('load', () => {
    fetch('[% file %]')
        .then(response => response.text())
        .then(contents => {
            document.getElementById("source").textContent = contents;
            hljs.highlightAll();
        });
});

</script>

</html>
